					name : "Psionic Arts",
					spells : ["mind spike", "phantasmal force", "shadow blade", "tasha's mind whip"],
					selection : ["mind spike", "phantasmal force", "shadow blade", "tasha's mind whip"],
					firstCol : 3,
					times : 3
				} 
