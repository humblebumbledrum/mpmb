			},
			autoSelectExtrachoices : [{ extrachoice : "Psionic smite", minlevel : 3 }],
			spellChanges : {
				"wrathful smite" : {
					components : "V",
					compMaterial : "",
					description : "Next melee weapon hit +1d6 Psychic dmg and save or frightened; it can take 1 a for extra save; (ki max 1/2 monk lvl)",
